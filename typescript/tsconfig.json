{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "./dist",
        "sourceMap": true,
        "moduleResolution": "node",
        "jsx": "react",
        "pretty": true,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "strictNullChecks": true
    },
    "exclude": [
        "node_modules"
    ],
    "compileOnSave": "false"
}
